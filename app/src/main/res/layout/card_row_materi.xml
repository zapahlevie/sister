<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="110dp"
            android:background="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/cover"
            android:scaleType="fitXY"
            android:layout_width="112dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            card_view:srcCompat="@drawable/cover1" />

        <TextView
            android:id="@+id/buku"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cover"
            android:layout_alignParentTop="true"
            android:text="Nama Buku"/>

        <TextView
            android:id="@+id/pengarang"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cover"
            android:layout_below="@id/buku"
            android:text="Nama Pengarang"
            />

        <ImageView
            android:id="@+id/preview"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cover"
            android:layout_alignTop="@id/view"
            android:layout_marginTop="8dp"
            card_view:srcCompat="@drawable/ic_zoom_in_black_24dp" />

        <ImageView
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/view"
            android:layout_toEndOf="@+id/preview"
            android:layout_marginTop="8dp"
            android:tint="@color/colorAccent"
            card_view:srcCompat="@drawable/ic_file_download_black_24dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>